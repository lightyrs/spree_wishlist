<% if current_user %>
  <div id="wishlist-form">
    <%= form_for Spree::WishedProduct.new do |f| %>
      <%= f.hidden_field :variant_id, :value => @product.master.id %>
      <button type="submit" class="button large primary">
        <i class="icon-heart"></i>
        <%= t(:add_to_wishlist) %>
      </button>
    <% end %>
  </div>
<% end %>
